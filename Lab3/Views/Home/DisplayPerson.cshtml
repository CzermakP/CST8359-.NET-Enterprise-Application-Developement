
@{
    ViewData["Title"] = "DisplayPerson";
}

<h3>Displaying Person's Information</h3>
<table>
    <tr>
        <td>First Name: </td>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <td>Last Name: </td>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <td>Age: </td>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <td>Email Address: </td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Date Of Birth: </td>
        <td>@Model.Birthday</td>
    </tr>
    <tr>
        <td>Description: </td>
        <td>@Model.Description</td>
    </tr>
</table>