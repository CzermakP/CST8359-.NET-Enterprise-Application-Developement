@model Lab4.Models.ViewModels.CommunityViewModel
    <!-- IEnumerable<Lab4.Models.Community> -->

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                Budget
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Communities)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- need to add display secion HERE for the output of the students beelonging to the "selected" community 
    * if the memberships are not empty, then loop through the memberships and display the students full name
     that belong to the selected membership -->
@if (Model.Memberships != null)
{
        <table class="table">
            <tbody>
                @foreach (var members in Model.Memberships)  
                { 
                    <tr>
                        @if (Model.Memberships.Count() > 0)
                        {
                            <td>
                                @Html.DisplayFor(ModelItem => members.Student.FullName)
                            </td>
                        }
                        else
                        {
                            <h2>
                                No Students belong to the selected Membership!
                            </h2>
                        }
                    </tr>
                 }
            </tbody>
        </table>
}
